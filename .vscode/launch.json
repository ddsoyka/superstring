{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Firefox)",
            "type": "firefox",
            "request": "launch",
            "reAttach": false,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/public"
        },
        {
            "name": "Attach (Firefox)",
            "type": "firefox",
            "request": "attach",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/public"
        },
        {
            "name": "Launch (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/public"
        },
        {
            "name": "Test",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "test",
                "--runInBand",
                "--no-cache",
                "--env=jsdom"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
